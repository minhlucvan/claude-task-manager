{
  "name": "claude-task-manager",
  "version": "0.1.0",
  "description": "The only PM who codes at 3 AM with you. AI project manager built on Claude Task Master. Your vision. Their code. Zero context switching.",
  "keywords": [
    "claude",
    "claude-code",
    "claude-task-master",
    "ai-project-manager",
    "ai-coding-assistant",
    "task-management",
    "project-management",
    "ai-development",
    "developer-tools",
    "productivity",
    "llm",
    "gpt",
    "anthropic",
    "ai-agent",
    "code-generation",
    "context-management",
    "terminal",
    "ui",
    "dashboard",
    "local-first"
  ],
  "private": true,
  "license": "MIT",
  "author": "minhlucvan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/minhlucvan/claude-task-manager.git"
  },
  "bugs": {
    "url": "https://github.com/minhlucvan/claude-task-manager/issues"
  },
  "homepage": "https://github.com/minhlucvan/claude-task-manager#readme",
  "scripts": {
    "dev": "tsx watch server.ts",
    "dev:next": "next dev --turbopack",
    "dev:terminal": "node scripts/start-websocket-server.js",
    "dev:signal": "node scripts/start-signal-server.js",
    "build": "next build && npx tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "next lint",
    "eslint": "eslint . --config eslint.config.mjs",
    "eslint:fix": "eslint . --fix --config eslint.config.mjs && node scripts/auto-fix-unused-vars.js",
    "eslint:fix-unused": "node scripts/auto-fix-unused-vars.js",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc --noEmit --strict --noImplicitAny",
    "format": "prettier --write .",
    "prepare": "husky install",
    "test": "jest",
    "kill:dev": "pkill -f 'next dev' && pkill -f 'node.*server' && pkill -f 'websocket' || true"
  },
  "dependencies": {
