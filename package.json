   "scripts": {
      "dev": "next dev --turbopack",
      "build": "next build",
      "start": "next start",
      "lint": "next lint",
      "eslint": "eslint . --config eslint.config.mjs",
      "eslint:fix": "eslint . --fix --config eslint.config.mjs",
      "typecheck": "tsc --noEmit",
      "typecheck:strict": "tsc --noEmit --strict --noImplicitAny",
      "format": "prettier --write .",
      "prepare": "husky install",
      "test": "jest",
      "prisma:studio": "prisma studio",
      "prisma:generate": "prisma generate",
      "graphql:codegen": "graphql-codegen --config codegen.yml",
      "codegen": "pnpm run prisma:generate && pnpm run graphql:codegen",
      "prebuild": "npm run generate:types",
      "sync:taskmaster": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/sync-taskmaster-to-prisma.ts sync",
      "sync:taskmaster:watch": "npm run sync:taskmaster watch",
      "sync:taskmaster:force": "npm run sync:taskmaster sync --force"
   },
