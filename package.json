    "motion": "^12.4.10",
    "next": "15.2.4",
    "next-themes": "^0.4.4",
    "node-pty": "^1.0.0",
    "react": "^19.0.0",
    "react-day-picker": "8.10.1",
    "react-dnd": "^16.0.1",
