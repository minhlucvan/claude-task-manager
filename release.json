   "scopes": {
      "api": {
         "label": "API"
      },
      "auth": {
         "label": "Authentication"
      },
      "ci": {
         "label": "CI/CD"
      },
      "core": {
         "label": "Core Logic"
      },
      "database": {
         "label": "Database"
      },
      "docs": {
         "label": "Documentation"
      },
      "general": {
         "label": "General"
      },
      "graphql": {
         "label": "GraphQL"
      },
      "integration": {
         "label": "Integration"
      },
      "maintenance": {
         "label": "Maintenance"
