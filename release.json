      },
      "security": {
         "label": "Security"
      },
      "styles": {
         "label": "Styles"
      },
      "ui": {
         "label": "UI/UX"
      },
      "ux": {
         "label": "User Experience"
      },
      "common-ui": {
         "label": "Common UI"
      }
   },
   "labels": {
      "scope": {
         "API": {
            "changed-files": ["apps/api/**"]
         },
         "Gateway": {
            "changed-files": ["apps/gateway/**"]
         },
         "Packages": {
            "changed-files": ["packages/**"]
         },
         "Infrastructure": {
            "changed-files": ["infra/**"]
         },
         "Config": {
            "changed-files": ["**/*.config.*", "**/*.env", "apps/**/config/**"]
         },
         "Docs": {
            "changed-files": ["docs/**", "**/*.md", "README.md"]
         },
         "Tests": {
            "changed-files": ["**/*.spec.ts", "**/__tests__/**"]
         },
         "Dependencies": {
            "changed-files": ["package.json", "yarn.lock"]
         },
         "CICD": {
            "changed-files": [".github/**"]
         },
         "Scripts": {
            "changed-files": ["scripts/**"]
         },
         "UI/UX": {
            "changed-files": ["packages/ui/**"]
         },
         "Features": {
            "changed-files": ["apps/frontend/src/features/**"]
         },
         "Services": {
            "changed-files": ["apps/frontend/src/services/**"]
         },
         "GraphQL": {
            "changed-files": ["**/graphql/**"]
         },
         "Hooks": {
            "changed-files": ["**/hooks/**"]
         },
         "Components": {
            "changed-files": ["**/components/**"]
         },
         "Views": {
            "changed-files": ["**/views/**"]
         },
         "Stores": {
            "changed-files": ["**/stores/**"]
         },
         "Storybook": {
            "changed-files": ["**/*.stories.ts", "**/*.stories.tsx"]
         }
      },
      "features": {
         "account": {
            "changed-files": ["apps/frontend/src/features/account/**"]
         },
         "buy-rates": {
            "changed-files": ["apps/frontend/src/features/buy-rates/**"]
         },
         "client-settlements": {
            "changed-files": ["apps/frontend/src/features/client-settlements/**"]
         },
         "export-matrix": {
            "changed-files": ["apps/frontend/src/features/export-matrix/**"]
         },
         "global-modal": {
            "changed-files": ["apps/frontend/src/features/global-modal/**"]
         },
         "integration": {
            "changed-files": ["apps/frontend/src/features/integration/**"]
         },
         "maintenance": {
            "changed-files": ["apps/frontend/src/features/maintenance/**"]
         },
         "manage-subscription": {
            "changed-files": ["apps/frontend/src/features/manage-subscription/**"]
         },
         "matrix": {
            "changed-files": ["apps/frontend/src/features/matrix/**"]
         },
         "sell-rates": {
            "changed-files": ["apps/frontend/src/features/sell-rates/**"]
         },
         "subscription": {
            "changed-files": ["apps/frontend/src/features/subscription/**"]
         }
      },
      "changeType": {
         "Feature": {
            "head-branch": ["^feat", ".*feature.*"]
         },
         "Fix": {
            "head-branch": ["^fix", ".*bug.*"]
         },
         "Refactor": {
            "head-branch": ["^refactor", ".*refactor.*"]
         },
         "Chore": {
            "head-branch": ["^chore", ".*chore.*"]
         }
      },
      "risk": {
         "Migration": {
            "changed-files": ["**/migrations/**", "**/migrate.ts", "**/*.migration.ts"]
         },
         "Event": {
            "changed-files": ["**/events/**", "**/*.event.ts"]
         },
         "Scheduler": {
            "changed-files": ["**/schedulers/**", "**/*.scheduler.ts"]
         },
         "Subscriber": {
            "changed-files": ["**/subscribers/**", "**/*.subscriber.ts"]
         },
         "Schema": {
            "changed-files": ["**/schemas/**", "**/*.schema.ts"]
         },
         "Security": {
            "changed-files": ["**/auth/**", "**/guard/**", "**/authz/**"]
         },
         "Breaking": {
            "head-branch": [".*breaking.*", "^breaking"],
            "changed-files": ["BREAKING_CHANGE.md"]
         }
      },
      "gitFlow": {
         "MergeBack": {
            "head-branch": ["^sync", "sync-.*", "merge-.*"]
         },
         "Release": {
            "base-branch": ["^main$"]
         },
         "WIP": {
            "head-branch": ["^wip", ".*wip.*"]
         },
         "Beta": {
            "head-branch": [".*-beta.*"]
         }
      }
   }
}
