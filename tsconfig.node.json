{
   "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2017",
      "lib": ["ES2017"],
      "allowJs": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": false,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "paths": {
         "@/*": ["./*"]
      }
   },
   "include": ["scripts/**/*", "libs/**/*", "prisma/**/*"],
   "exclude": ["node_modules"]
}
