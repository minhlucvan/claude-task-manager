{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "strict": false,
    "noImplicitAny": false,
    "types": ["node"]
  },
  "include": ["src/cli.ts", "src/lib/**/*"],
  "exclude": ["node_modules", "dist", ".next", "**/*.test.ts", "**/*.spec.ts"]
}
